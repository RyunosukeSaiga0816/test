<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache SoftWare Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true"/>

	<!-- 対象packageを設定 -->
	<package name="com.internousdev.website.action" extends="struts-default">

		<!-- GoHomeAction -->
		<action name="GoHomeAction" class="com.internousdev.website.action.GoHomeAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

		<!-- HomeAction -->
		<action name="HomeAction" class="com.internousdev.website.action.HomeAction" method="execute">
			<result name="login">login.jsp</result>
			<result name="success">buyItem.jsp</result>
		</action>

		<!-- LoginAction -->
		<action name="LoginAction" class="com.internousdev.website.action.LoginAction" method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">login.jsp</result>
		</action>

		<!-- UserCreateAction -->
		<action name="UserCreateAction" class="com.internousdev.website.action.UserCreateAction" method="execute">
			<result name="success">userCreate.jsp</result>
			<result name="back">login.jsp</result>
		</action>

		<!-- UserCreateConfirmAction -->
		<action name="userCreateConfirmAction" class="com.internousdev.website.action.UserCreateConfirm" method="execute">
			<result name="success">userCreateConfirm.jsp</result>
			<result name="error">userCreate.jsp</result>
		</action>

		<!-- UserCreateComplete -->
		<action name="UserCreateComplete" class="com.internousdev.website.action.UserCreateComplete" method="execute">
			<result name="success">userCreateComplete.jsp</result>
		</action>

		<!-- BuyItemAction -->
		<action name="BuyItemAction" class="com.intenrousdev.website.action.BuyItemAction" method="execute">
			<result name="success">buyItemConfirm.jsp</result>
			<result name="error">buyItem.jsp</result>
		</action>

		<!-- BuyItemConfirmAction -->
		<action name="BuyItemConfirm" class="com.internousdev.website.action.BuyItemConfirmAction" method="execute">
			<result name="success">buyItemConplete.jsp</result>
			<result name="back">buyItem.jsp</result>
		</action>

		<!-- BuyItemCompleteAction -->
		<action name="BuyItemCompleteAction" class="com.internousdev.website.action.BuyItemCompleteAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

		<!-- MyPageAction -->
		<action name="MyPageAction" class="com.internousdev.website.action.MyPageAction" method="execute">
			<result name="success">myPage.jsp</result>
			<result name="error">login.jsp</result>
		</action>

		<!-- LogoutAction -->
		<action name="LogoutAction" class="com.internousdev.website.action.LogoutAction" method="execute">
			<result name="success">home.jsp</result>
		</action>
	</package>
</struts>